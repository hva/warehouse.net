<controls:ChildWindow
    x:Class="Warehouse.Silverlight.MainModule.Attachments.ProgressWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
    xmlns:controls1="clr-namespace:Warehouse.Silverlight.Controls;assembly=Warehouse.Silverlight.Controls"
    Width="Auto"
    Height="Auto"
    HasCloseButton="False">

    <controls:ChildWindow.ContentTemplate>
        <DataTemplate>
            <StackPanel Orientation="Horizontal">
                <controls1:ProgressRing IsActive="True" />
                <Rectangle Width="10" />
                <ContentPresenter Content="{Binding}" VerticalAlignment="Center" />
            </StackPanel>
        </DataTemplate>
    </controls:ChildWindow.ContentTemplate>
    
</controls:ChildWindow>